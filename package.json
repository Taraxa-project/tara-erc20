{
  "name": "tara-erc20",
  "version": "1.0.0",
  "description": "Tara ERC20 Contract",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Taraxa-project/tara-erc20.git"
  },
  "bugs": {
    "url": "https://github.com/Taraxa-project/tara-erc20/issues"
  },
  "keywords": [
    "TARA",
    "ERC20",
    "Ethereum",
    "Token"
  ],
  "author": "Ian Patton <ian.patton@taraxa.io>",
  "license": "UNLICENSED",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "console": "truffle console",
    "release": "truffle migrate --network mainnet",
    "test": "truffle test",
    "clean": "rm -rf build/contracts",
    "abi": "yarn clean && yarn compile && ./gen-abi.sh Tara Claim",
    "coverage": "truffle run coverage --file='./test/*.js'",
    "testrpc": "ganache-cli -m \"$(cat .env | grep MNEMONIC= | awk -F '=' '{print $2}')\" -d"
  },
  "homepage": "https://github.com/Taraxa-project/tara-erc20#readme",
  "devDependencies": {
    "@openzeppelin/contracts": "3.4.0-solc-0.7",
    "@truffle/hdwallet-provider": "^1.0.36",
    "bn-chai": "^1.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^8.2.0",
    "eth-gas-reporter": "^0.2.18",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.0.8",
    "ganache-cli": "^6.12.0",
    "solidity-coverage": "^0.7.9",
    "truffle": "^5.1.50",
    "truffle-assertions": "^0.9.2",
    "truffle-flattener": "1.5.0",
    "web3": "^1.3.0"
  }
}
